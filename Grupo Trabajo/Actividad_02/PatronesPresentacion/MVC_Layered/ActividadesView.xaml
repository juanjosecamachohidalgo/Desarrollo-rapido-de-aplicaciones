<Window x:Class="MVC_Layered.UI.ActividadesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VentanaPrincipal" Height="350" Width="525"
        FocusManager.FocusedElement="{Binding ElementName=ActividadComboBox}">
        <UniformGrid Columns="2">
            <Label Content="Actividad:" />
            <ComboBox Name="ActividadesComboBox" Margin="5" SelectionChanged ="ActividadesComboBox_SelectionChanged" />
            <Label Content="Coste Estimado:" />
            <TextBox Name="PrecioEstimadoTextBox" Margin="5" IsEnabled="False" />
            <Label Content="Coste Actual :" />
            <TextBox Name="PrecioActualTextBox" Margin="5" IsEnabled="False" />
            <Button Name="ActualizarButton" Content="Actualizar" Margin="5" IsEnabled="False" Click="ActualizarButton_Click" />
        </UniformGrid>
</Window>
